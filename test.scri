# User defined functions
func add(int a, int b) void {
    int result = a + b;
    printLn(result);
}

add(1, 2);

func sub(int a, int b) void {
    int result = 0;
    result = a + b - 2 * b;
    printLn(result);
}

sub(6, 4);

func addWithReturn(int a, int b) int {
    int result = a + b;
    return result;
}

printLn(addWithReturn(10, 11));